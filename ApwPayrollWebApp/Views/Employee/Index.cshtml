@using ApwPayroll_Application.Features.Employees.Queries.GetAllEmployees
 @{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Employee List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Sr.No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            <th>Gender</th>
            <th>Action</th>
        </tr>
    </thead>    
    <tbody>
        @{
            @foreach (var item in ViewBag.employee)
            {
                <tr>
                    <td>@(ViewBag.employee.IndexOf(item)+1)</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.DOB</td>
                    <td>@item.Gender</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Employee" asp-action="UpdateEmployee"
                           asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Employee" asp-action="Delete"
                           asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>

