@using ApwPayroll_Application.Features.Employees.Queries.GetAllEmployees
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <h2 class="text-left">Employee List</h2>
        </div>
        <div class="col-md-5 text-md-end">
            <a class="btn btn-success btn-lg" asp-action="CreateEmployeeBasic" asp-controller="Employee">Add New Employee</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email ID</th>
                    <th>Date of Joining</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    @foreach (var item in ViewBag.employee)
                    {
                        <tr>
                            <td>@(ViewBag.employee.IndexOf(item) + 1)</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.EmailId</td>
                            <td>@item.DateOfJoining.ToString("dd MMM yyyy")</td>
                            <td class="text-center">
                                <a asp-route-id="@item.Id" asp-action="EmployeeCompleteDetails" style="padding: 0; font-size: 24px; color: #007bff;" title="View Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
