@using ApwPayrollWebApp.Models
@using ApwPayroll_Application.Features.Employees.Commands.CreateEmployee
@model EmployeeCreateViewModel
 


<h3 class=" text center">Create Employee</h3>


<div class="row">
    <div class="col-xxl-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs-custom rounded card-header-tabs border-bottom-0"
                    role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#basicDetails"
                           role="tab">
                            <i class="fas fa-home"></i>
                            Basic Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#personalDetails"
                           role="tab">
                            <i class="fas fa-home"></i>
                            Personal Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#EducationQualification" role="tab">
                            <i class="far fa-user"></i>
                            Education & Experience
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#familyDetail" role="tab">
                            <i class="far fa-envelope"></i>
                            Family
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#documents" role="tab">
                            <i class="far fa-envelope"></i>
                            Documents
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="tab" href="#references" role="tab">
                            <i class="far fa-envelope"></i>
                            References
                        </a>
                    </li>

                </ul>
            </div>
            <div class="card-body">
              
                    <div class="tab-content">
                        <div class="tab-pane active" id="basicDetails" role="tabpanel">

                            <form asp-action="CreateEmployee" asp-controller="Employee" method="post">
                                <input type="hidden" />
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-6">
                                        <label class="form-label">  First Name</label>
                                     
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-user-2-fill"></i>
                                            </span>
                                            <select asp-for="Employee.Salutation" class="form-control form-control-sm" style="width: auto;">
                                                <option value="" disabled selected>Select title</option>
                                                @foreach (var salutation in ViewBag.SalutationLookup)
                                                {
                                                    <option value="@salutation.Id">@salutation.Name</option>
                                                }
                                            </select>

                                            <input type="text" asp-for="Employee.FirstName" class="form-control form-control-sm" style="flex: 20" placeholder="Enter first name">
                                        </div>
                                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>

                                    </div>

                                    <div class="col-lg-6">
                                        <label asp-for="Employee.LastName" class="form-label">Last Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-user-2-fill"></i>
                                            </span>
                                            <input asp-for="Employee.LastName" type="text" class="form-control form-control-sm" placeholder="Enter last name">
                                        </div>
                                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-6">
                                        <label asp-for="Employee.EmailId" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class=" ri-mail-unread-fill"></i>
                                            </span>
                                            <input asp-for="Employee.EmailId" type="text" class="form-control form-control-sm" placeholder="Enter Email">

                                        </div>
                                        <span asp-validation-for="Employee.EmailId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <label asp-for="Employee.MobileNumber" class="form-label">Contact Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-smartphone-fill"></i>
                                            </span>
                                            <input asp-for="Employee.MobileNumber" class="form-control form-control-sm" placeholder="Enter Contact Number">
                                        </div>
                                        <span asp-validation-for="Employee.MobileNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mt-1 mb-2">
                                    <div class="col-6">
                                        <label class="form-label">Department</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-arrow-down-s-fill"></i>
                                            </span>
                                            <select class="form-control form-control-sm" asp-items="@ViewBag.DepartmentList">
                                                <option value="" disabled selected>Select a Department</option>
                                                @foreach (var department in ViewBag.departments)
                                                {
                                                    <option value="@department.Id">@department.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                                    </div>


                                    <div class="col-lg-6 col-6">
                                        <label class="form-label">Designation</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-arrow-down-s-fill"></i>
                                            </span>
                                            <select class="form-control form-control-sm">
                                                <option value="" disabled selected>Select Designation</option>
                                                @foreach (var designation in ViewBag.designation)
                                                {
                                                    <option value="@designation.Id">@designation.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Employee.DesignationId" class="text-danger"></span>
                                    </div>

                                </div>


                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-6 col-6">
                                        <label class="form-label">Branch</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-arrow-down-s-fill"></i>
                                            </span>
                                            <select asp-for="Employee.BranchId" class="form-control form-control-sm">
                                                <option value="" disabled selected>Select branch</option>
                                                @foreach (var branch in ViewBag.branches)
                                                {
                                                    <option value="@branch.Id">@branch.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="Employee.BranchId" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-6">
                                        <label class="form-label">Date Of Joining</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-calendar-event-fill"></i>
                                            </span>
                                            <input asp-for="Employee.DateOfJoining" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter your Date Of Joining">
                                        </div>
                                        <span asp-validation-for="Employee.DateOfJoining" class="text-danger"></span>
                                    </div>
                                </div>



                                <div class="mt-3">
                                    <input asp-for="Employee.IsLoginAccess" id="enablePortalAccess" />
                                    <label class="ms-2"> Enable Portal Access</label>
                                    <p class="ms-5">
                                        The employee will be able to view payslips, submit their IT declaration and create
                                        <br />
                                        reimbursement claims through the employee portal.
                                    </p>
                                </div>
                                <span asp-validation-for="Employee.IsLoginAccess" class="text-danger"></span>
                                <div>

                                    <div class="row mt-1 mb-2">
                                        <div class="col-lg-6">
                                            <label class="form-label">PF Account Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.PfNumber" type="text" class="form-control form-control-sm" placeholder="AA/AAA/0000000/XXX/0000000">
                                            </div>
                                            <span asp-validation-for="Employee.PfNumber" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label">UAN</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.UanNumber" type="text" class="form-control form-control-sm" placeholder="000000000000">
                                            </div>
                                            <span asp-validation-for="Employee.UanNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-1 mb-2">
                                        <div class="col-lg-6">
                                            <label class="form-label">ESI Insurance Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.ESINumber" type="text" class="form-control form-control-sm" placeholder="000000000000">
                                            </div>
                                            <span asp-validation-for="Employee.ESINumber" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label">Pan Card Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.PanNumber" type="text" class="form-control form-control-sm" placeholder="XXXXX0000X">
                                            </div>
                                            <span asp-validation-for="Employee.PanNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-1 mb-2">
                                        <div class="col-lg-6">
                                            <label class="form-label">Aadhar Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                    <i class="bi bi-person-vcard-fill"></i>
                                                </span>
                                                <input asp-for="Employee.AadharNumber" type="text" class="form-control form-control-sm" placeholder="000000000000">
                                            </div>
                                            <span asp-validation-for="Employee.AadharNumber" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label">Ration Card Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.RationCardNumber" type="number" class="form-control form-control-sm" placeholder="000000000000">
                                            </div>
                                            <span asp-validation-for="Employee.RationCardNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-1 mb-2">
                                        <div class="col-lg-6">
                                            <label class="form-label">Passport Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.PassportNumber" type="text" class="form-control form-control-sm" placeholder="X0000000">
                                            </div>
                                            <span asp-validation-for="Employee.PassportNumber" class="text-danger"></span>
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label">Voter Id Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.VoterId" type="text" class="form-control form-control-sm" placeholder="XXX000000">
                                            </div>
                                            <span asp-validation-for="Employee.VoterId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row mt-1 mb-2">
                                        <div class="col-lg-6">
                                            <label class="form-label">License Number</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-lock-password-fill"></i>
                                                </span>
                                                <input asp-for="Employee.LicenceNumber" type="text" class="form-control form-control-sm" placeholder="XX00 00000000000">
                                            </div>
                                            <span asp-validation-for="Employee.LicenceNumber" class="text-danger"></span>
                                        </div>

                                    </div>
                                </div>
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-12">
                                        <div class="hstack gap-2 justify-content-end">
                                            <button type="reset" class="btn btn-outline-danger">
                                                Cancel
                                            </button>
                                            <button type="submit" class="btn btn-secondary" onclick="submitPersonalDetails()">
                                                Save & Next
                                            </button>

                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                

                <div>
                    <div class="tab-content">
                        <div class="tab-pane" id="personalDetails" role="tabpanel">
                            <form asp-action="CreatePersonalDetail" asp-controller="Employee" method="post" id="personalDetailsForm">
                                >
                                <div class="row mt-1 mb-2">
                                    <input type="hidden" id="EmployeeId" name="EmployeeId" value="@ViewBag.EmployeeId" />
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Gender" class="form-label">Gender</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-parent-fill"></i>
                                            </span>
                                            <select class="form-control form-control-sm" required>
                                                <option value="">Select Gender</option>
                                                @foreach (var gender in ViewBag.GenderLookup)
                                                {
                                                    <option value="@gender.Id">@gender.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.Gender" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.DOB" class="form-label">Date Of Birth</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-calendar-event-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.DOB" type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter DOB" />
@*                                             <input hid asp-for="Id" ViewBag.EmployeeId type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter DOB" />
 *@                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.DOB" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.PlaceOfBirth" class="form-label">Place Of Birth</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="bx bxs-location-plus"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.PlaceOfBirth" type="text" class="form-control form-control-sm" placeholder="Enter Place of Birth" />
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.PlaceOfBirth" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-lg-4">

                                        <label asp-for ="EmployeePersonalDetail.BloodGroup" class="form-label">Blood Group</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="mdi mdi-blood-bag"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.BloodGroup" type="text" class="form-control form-control-sm" placeholder="Enter Blood Group" />
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.BloodGroup" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Religion" class="form-label">Religion</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-pencil-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.Religion" type="text" class="form-control form-control-sm" placeholder="Enter Religion" />
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.Religion" class="text-danger"></span>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Nationality" class="form-label">Nationality</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-edit-circle-fill  "></i>
                                            </span>
                                            <input asp-for ="EmployeePersonalDetail.Nationality" type="text" class="form-control form-control-sm" placeholder="Enter Nationality" />
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.Nationality" class="text-danger"></span>
                                    </div>
                                </div>

                                @* Emergency Contact *@
                                <label class="mt-3 fs-3  text-danger">Emergency Contact</label><hr />
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Emergency.RelationType" class="form-label">Relation Type</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-user-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.Emergency.RelationType" type="text" class="form-control form-control-sm" placeholder="Enter Name" placeholder="Enter Relation Type" />
                                        </div>
                                        <span asp-validation-for="EmployeePersonalDetail.Emergency.RelationType"></span>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Emergency.Email" class="form-label">Email</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class=" ri-mail-unread-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.Emergency.Email" type="text" class="form-control form-control-sm" placeholder="Enter a valid Email Id">

                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Emergency.MobileNumber" class="form-label">Mobile Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-smartphone-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.Emergency.MobileNumber" type="text" class="form-control form-control-sm" placeholder="Enter Emergency Mobile Number" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.Emergency.WhatsAppNumber" class="form-label">Whats App Number</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-smartphone-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.Emergency.WhatsAppNumber" type="text" class="form-control form-control-sm" placeholder="Enter WhatsApp Number " />
                                        </div>
                                    </div>
                                </div>

                                @* Family Detail for addition *@

                                <label class="mt-3 fs-3 text-danger"> Family Detail</label><hr />

                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-6">
                                        <label asp-for="EmployeePersonalDetail.FatherName" class="form-label">Father Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-user-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.FatherName" type="text" class="form-control form-control-sm" placeholder="Enter Father Name" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <label asp-for="EmployeePersonalDetail.FatherDOB" class="form-label">Father Date Of Birth</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-calendar-event-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.FatherDOB" type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter Father date of birth" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-6">
                                        <label asp-for="EmployeePersonalDetail.MotherName" class="form-label">Mother Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-user-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.MotherName" type="text" class="form-control form-control-sm" placeholder="Enter Mother Name" />
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <label asp-for="EmployeePersonalDetail.MotherDOB" class="form-label">Mother Date Of Birth</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-calendar-event-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail.MotherDOB" type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter Mother Date of birth" />
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail.MarriedStatus" class="form-label">Marital Status</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class="ri-arrow-down-s-fill"></i>
                                            </span>
                                            @Html.DropDownList("MaritalStatus", new SelectList(
                                                     new List<SelectListItem>
                                            {
                                            new SelectListItem{Text="Select Marital Status", Value="null"},
                                            new SelectListItem { Text = "Married", Value = "Married" },
                                            new SelectListItem { Text = "Single", Value = "Single" },
                                            new SelectListItem { Text = "Widowed", Value = "Widowed" },
                                            new SelectListItem { Text = "Divorced", Value = "Divorced" }
                                            }, "Value", "Text"), new { @class = "form-control form-control-sm", id = "maritalStatusDropdown" })
                                        </div>


                                    </div>
                                </div>
                                <div id="spouseDetails" style="display:none;">


                                    <div class="row mb-2">
                                        <div class="col-lg-3">
                                            <label asp-for="EmployeePersonalDetail.SpouseName" class="form-label">Spouse Name</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-user-fill"></i>
                                                </span>
                                                <input asp-for="EmployeePersonalDetail.SpouseName" type="text" class="form-control form-control-sm" placeholder="Enter spouse name" />
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="EmployeePersonalDetail.SpouseDOB" class="form-label">Spouse Date Of Birth</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-calendar-event-fill"></i>
                                                </span>
                                                <input asp-for="EmployeePersonalDetail.SpouseDOB" type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter spouse date of birth" />
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <label asp-for="EmployeePersonalDetail.SpouseGender" class="form-label"> Spouse Gender</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-calendar-event-fill"></i>
                                                </span>
                                                <input asp-for="EmployeePersonalDetail.SpouseGender" type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter spouse gender" />
                                            </div>
                                        </div>   
                                        <div class="col-lg-3">
                                            <label asp-for="EmployeePersonalDetail.DateOfWedding" class="form-label">Date Of Wedding</label>
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="ri-calendar-event-fill"></i>
                                                </span>
                                                <input type="text" class="form-control form-control-sm" data-provider="flatpickr" placeholder="Enter date of wedding" />
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                @* Address *@


                                <label class="mt-3 fs-3 text-danger">Residential Address</label><hr />
                                <div class="row mt-1 mb-2">
                                    <div class="col-lg-4">
                                        <label asp-for="EmployeePersonalDetail. ResidentialAddress.Address1" class="form-label">Address Line 1</label>
                                        <div class="input-group">
                                            <span class="input-group-text">
                                                <i class=" ri-pencil-fill"></i>
                                            </span>
                                            <input asp-for="EmployeePersonalDetail. ResidentialAddress.Address1" type="text" class="form-control form-control-sm" placeholder="Address line 1" />
                                        </div>
