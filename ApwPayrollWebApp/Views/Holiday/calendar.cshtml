@{
    ViewData["Title"] = "calendar";
}
<!DOCTYPE html>
<html>
<head>
    <title>Year and Month Navigation with FullCalendar</title>
    <style>
        /* Styling the navigation */
        #navigation {
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 20px;
            font-family: Arial, sans-serif;
        }

        .nav-button, .today-button {
            margin: 0 5px;
            cursor: pointer;
            color: #3a77af;
            font-size: 1.2em;
        }

        .current-year, .current-month {
            font-size: 1.5em;
            padding: 5px 10px;
            background-color: #e9f4ff;
            border-radius: 5px;
            font-weight: bold;
        }

        .today-button {
            background-color: #f0f0f0;
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
            border: 1px solid #ccc;
            color: #333;
        }

        .month-select {
            border: 1px solid #ccc;
            padding: 5px;
            border-radius: 5px;
            background-color: #fff;
        }
    </style>
</head>
<body>
    <!-- Navigation UI -->
    <div class="row" id="navigation">
        <div class="col-6">
            <!-- Year Navigation -->
            <span id="prev-year" class="nav-button">&lt; <span id="prev-year-text"></span></span>
            <span id="current-year" class="current-year"></span>
            <span id="next-year" class="nav-button"><span id="next-year-text"></span> &gt;</span>
        </div>
        <div class="col-6">
            <!-- Month Navigation -->
            <span id="prev-month" class="nav-button">&lt;</span>
            <span id="current-month" class="current-month"></span>
            <span id="next-month" class="nav-button">&gt;</span>

            <span id="today-button" class="today-button">Today</span>
        </div>
    </div>

    <!-- FullCalendar -->
    <div id="calendar"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');
            var currentDate = new Date();
            var currentYear = currentDate.getFullYear();
            var currentMonth = currentDate.getMonth();

            // Initialize FullCalendar
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: '',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: [
        @if (Model != null && Model.Data != null)
        {
            @foreach (var holiday in Model.Data)
            {
                <text >
                            {
                                title: '@holiday.Name - @holiday.HolidayType.Name',
                                start: '@holiday.FromDate.ToString("yyyy-MM-dd")',
                                end: '@holiday.ToDate.ToString("yyyy-MM-dd")',
                                description: '@holiday.Description',
                                backgroundColor: '#bc0000',
                                borderColor: '#ffffff'
                            },
                </text>
            }
        }
                        ]
            });

            calendar.render();
            updateNavigation();

            // Update year and month navigation UI
            function updateNavigation() {
                $("#current-year").text(currentYear);
                $("#prev-year-text").text(currentYear - 1);
                $("#next-year-text").text(currentYear + 1);
                $("#current-month").text(new Date(currentYear, currentMonth).toLocaleString('default', { month: 'long' }));
            }

            // Handle click events for year and month navigation
            $("#prev-year").on("click", function () {
                currentYear--;
                calendar.gotoDate(new Date(currentYear, currentMonth, 1));
                updateNavigation();
            });

            $("#next-year").on("click", function () {
                currentYear++;
                calendar.gotoDate(new Date(currentYear, currentMonth, 1));
                updateNavigation();
            });

            $("#prev-month").on("click", function () {
                if (currentMonth === 0) {
                    currentMonth = 11;
                    currentYear--;
                } else {
                    currentMonth--;
                }
                calendar.gotoDate(new Date(currentYear, currentMonth, 1));
                updateNavigation();
            });

            $("#next-month").on("click", function () {
                if (currentMonth === 11) {
                    currentMonth = 0;
                    currentYear++;
                } else {
                    currentMonth++;
                }
                calendar.gotoDate(new Date(currentYear, currentMonth, 1));
                updateNavigation();
            });

            $("#today-button").on("click", function () {
                currentDate = new Date();
                currentYear = currentDate.getFullYear();
                currentMonth = currentDate.getMonth();
                calendar.gotoDate(currentDate);
                updateNavigation();
            });
        });
    </script>
</body>
</html>
