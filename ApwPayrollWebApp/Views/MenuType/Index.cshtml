
@{
    ViewData["Title"] = "Index";
}

<div class="m-2">
   <div class="row">
       <div class="col-6">
            <h1 class="text-success">
                MenuType
            </h1>
       </div>
       <div class="col-6">
           <a  asp-action="Create"> Create new </a>
       </div>
   </div>
    
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Name</th>
                    <th>IsActive</th>
                    <th>Roll_No</th>
 
                </tr>
            </thead>
            <tbody>
                <tr>
                    @if (ViewBag.data == null || ViewBag == null)
                    {
                        <h1>No Data Found</h1>
                    }
                    else
                    {
                        foreach (var item in ViewBag.data)
                        {
                            
                     <td>@(ViewBag.data.IndexOf(item)+1)</td>
                    <td>@item.Name</td>
                    <td>@item.IsActive</td>
                     
                        }   
                    }
                </tr>
            </tbody>
        </table>
    </div>
    </div>