@using ApwPayroll_Domain.Entities.Leaves
 @model List<Leave>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <h2 class="text-left">Leave List Leave Request </h2>
        </div>
        <div class="col-md-5 text-md-end">
            <a class="btn btn-success" asp-action="CreateLeave">Add Leave</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.No</th>
                    <th>LeaveType</th>
                    <th>Reason</th>
                    <th>ContactNumber</th>
                    <th>RequestedDate</th>
                    <th>IsPaid</th>
                    <th>LeaveStatus</th>
                    <th>IsHalfDay</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null  )
                {
                    @foreach (var item in Model )
                    {
                        <tr>
                            <td>@(Model.IndexOf(item) + 1)</td>
                            <td>@item.LeaveType.Name</td>
                            <td>@item.Reason</td>
                            <td>@item.ContactNumber</td>
                            <td>@item.RequestedDate</td>
                            <td>@item.IsPaid</td>
                            <td>@item.LeaveStatus</td>
                            <td>@item.IsHalfDay</td>
                            <td class="text-center">
                                <a asp-route-id="@item.Id" asp-action="CreateLeave" style="padding: 0; font-size: 24px; color: #007bff;" title="Edit">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

