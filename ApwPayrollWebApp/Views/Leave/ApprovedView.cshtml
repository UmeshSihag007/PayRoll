@{
    ViewData["Title"] = "ApprovedView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-4">
    <div class="row align-items-center mb-4">
        <div class="col-md-7">
            <h2 class="text-left">ApprovedView</h2>
        </div>
       
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Sr.No</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Branch</th>
                    <th>Gender</th>
                    <th>ContactNumber</th>
                    <th>From To</th>
                    <th>Reason</th>
                    <th>LeaveStatus</th>
                    <th>Action</th>
                </tr>
            </thead>
             <tbody>
                @if (Model != null && Model.Data != null)
                {
                    var leaveList = Model.Data;
                    Console.WriteLine(leaveList);
                    @foreach (var item in leaveList)
                    {
                        <tr>
                            <td>@(leaveList.IndexOf(item) + 1)</td>
                            <td>@item.LeaveType.Name</td>
                           
                      <td>@(item.Designation?.Name ?? " ")</td>
                            <td>@(item.Designation?.Name ?? " ")</td>
                            <td>@(item.Designation?.Name ?? " ")</td>
                            <td>@item.ContactNumber</td>
                            <td>@item.FromDate.ToString("dd MMM yyyy") - @item.ToDate.ToString("dd MMM yyyy")</td>
                            <td>@item.Reason</td>
                            <td>@item.LeaveStatus</td>
                
                            <td class="text-center">
                                <a asp-route-id="@item.Id" asp-action="CreateLeaveStatus" asp-controller="LeaveResponseStatus" style="padding: 0; font-size: 24px; color: #007bff;" title="View Details">
                                    <i class="bi bi-eye-fill"></i>
                                </a>  
                           
                              </td>
                   
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
