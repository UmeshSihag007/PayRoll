@using ApwPayrollWebApp.Models
@model MasterModel

@{
    ViewData["Title"] = "Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <span class="card-title fw-normal">Add Department</span>
        </div>
        <div class="card-body">
            <form asp-action="CreateDepartment" asp-controller="Department" method="post">
                <input asp-for="createDepartment.Id" hidden />
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="createDepartment.Name" class="form-label">Name</label>
                        <input asp-for="createDepartment.Name" type="text" class="form-control" placeholder="Enter department name" />
                        <span asp-validation-for="createDepartment.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="createDepartment.Description" class="form-label">Description</label>
                        <input asp-for="createDepartment.Description" type="text" class="form-control" placeholder="Enter description" />
                        <span asp-validation-for="createDepartment.Description" class="text-danger"></span>
                    </div>
                    <div class="col-sm-12">
                        <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">
                            @(Model?.createDepartment?.Id.HasValue == true && Model.createDepartment.Id.Value != 0 ? "Update" : "Add")
                        </button>
                    </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <span class="card-title fw-normal">Department List</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-success">
                        <tr>
                            <th class="rounded-start">Sr.No</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="rounded-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.Department != null)
                        {
                            @foreach (var item in ViewBag.Department)
                            {
                                <tr>
                                    <td>@(ViewBag.Department.IndexOf(item) + 1)</td>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-action="DepartmentView" asp-route-id="@item.Id" class="btn btn-sm btn-info editBtn">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id')">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/libs/dropzone/dropzone-min.js"></script>
    <script src="~/assets/js/pages/crypto-kyc.init.js"></script>
    <script src="~/assets/js/app.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@Html.Partial("_DeleteConfirmation")

<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                let url = '@Url.Action("Delete", "Department")/' + id;
                window.location.href = url;
            }
        });
    }
</script>
