@using ApwPayroll_Application.Features.Users.Commands.RegisterUsers
@model RegisterUserCommand

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="ladylip" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")

    <!-- For toaster Alert 2 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <!-- Other head content -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .auth-bg-cover {
            background: linear-gradient(151deg, rgba(249,150,34,1) 0%, rgba(255,255,255,1) 47%, rgba(97,179,93,1) 100%) !important;
        }

        .bg-overlay {
            position: absolute;
            height: 100%;
            width: 100%;
            right: 0;
            bottom: 0;
            left: 0;
            top: 0;
        }

        .auth-one-bg .bg-overlay {
            background: -webkit-gradient(linear,left top,right top,from(#364574),to(#405189));
            background: linear-gradient(to right,#364574,#405189);
            opacity: .1;
        }

    </style>
</head>

<body>
    <!-- auth-page wrapper -->
    <div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-overlay"></div>
        <!-- auth-page content -->
        <div class="auth-page-content overflow-hidden pt-lg-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card overflow-hidden m-0">
                            <div class="row justify-content-center g-0">
                                <div class="col-lg-6">
                                    <div class="auth-one-bg h-100 ms-4 mb-0">
                                        <div class="position-relative h-100 d-flex flex-column">
                                            <div class="mb-4">
                                                <a href="@Url.Action("Index", "Dashboard")" class="d-block">
                                                    <img src="~/assets/images/logo-light.png" alt="" height="40">
                                                </a>
                                            </div>
                                            <div class="mt-auto"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4">
                                        <div class="mb-4 d-flex justify-content-center">
                                            <a class="d-block">
                                                <img src="~/assets/images/logo-light.png" alt="" height="100">
                                            </a>
                                        </div>
                                        <div class="mt-4">
                                            <div class="p-4 my-auto">
                                                <h4 class="fs-20 text-center">Register</h4>
                                                <!-- form -->
                                                <form asp-action="Register">
                                                    <div asp-validation-summary="All" class="text-danger"></div>
                                                    @if (ViewBag.ErrorMessages != null)
                                                    {
                                                        <div class="alert alert-danger">
                                                            @foreach (var message in ViewBag.ErrorMessages)
                                                            {
                                                                <p>@message</p>
                                                            }
                                                        </div>
                                                    }
                                                    <div class="mb-3">
                                                        <label asp-for="FirstName" class="form-label"></label>
                                                        <input asp-for="FirstName" class="form-control" />
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label asp-for="LastName" class="form-label"></label>
                                                        <input asp-for="LastName" class="form-control" />
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label asp-for="Email" class="form-label"></label>
                                                        <input asp-for="Email" class="form-control" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label asp-for="Password" class="form-label"></label>
                                                        <input asp-for="Password" class="form-control" />
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label asp-for="ConfirmPassword" class="form-label"></label>
                                                        <input asp-for="ConfirmPassword" class="form-control" />
                                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                    </div>
                                                    <div class="mb-0 text-start">
                                                        <button class="btn btn-warning w-100" type="submit">
                                                            <i class="ri-login-circle-fill me-1"></i> <span class="fw-bold">Register</span>
                                                        </button>
                                                    </div>
                                                </form>
                                                <!-- end form-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end card -->
                    </div>
                    <!-- end col -->
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0" style="color:black">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> AapkaPolicyWala. Crafted with <i class="mdi mdi-heart text-danger"></i> by Sircl Tech.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_notificationPartial")
    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <!-- validation init -->
    <script src="~/assets/js/pages/form-validation.init.js"></script>
</body>
</html>
