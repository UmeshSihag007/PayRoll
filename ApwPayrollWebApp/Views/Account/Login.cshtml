@using ApwPayroll_Application.Features.Users.Commands.Login
@using ApwPayroll_Domain.Entities.AspUsers
@using Microsoft.AspNetCore.Identity

@inject SignInManager<AspUser> _signInManager;


@model UserLoginCommand
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="ladylip" data-sidebar-size="lg">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
    <style>
        .auth-bg-cover {
            background: linear-gradient(151deg, rgba(249,150,34,1) 0%, rgba(255,255,255,1) 47%, rgba(97,179,93,1) 100%) !important;
        }

        .bg-overlay {
            position: absolute;
            height: 100%;
            width: 100%;
            right: 0;
            bottom: 0;
            left: 0;
            top: 0;
        }

        .auth-one-bg .bg-overlay {
            background: -webkit-gradient(linear,left top,right top,from(#364574),to(#405189));
            background: linear-gradient(to right,#364574,#405189);
            opacity: .1;
        }

    </style>

</head>

<body>

    <!-- auth-page wrapper -->
    <div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-overlay"></div>
        <!-- auth-page content -->
        <div class="auth-page-content overflow-hidden pt-lg-5">
            <div class="container">
                <div class="row">
