 @using ApwPayrollWebApp.Models
@model MasterModel

@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container ">
<div class="card">
        <div class="card-header">
            <span class="card-title fw-normal">Add Courses</span>
        </div>
    <div class="card-body">
        <form asp-action="CreateCourse" method="post">
                       <input asp-for="createCourses.Id" hidden />
            <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="createCourses.Name" class="form-label">Name</label>
                        <input asp-for="createCourses.Name" type="text" class="form-control " placeholder="Enter course name" />
                        <span asp-validation-for="createCourses.Name"  class="text-danger"></span>
                    </div>
                    <!-- Is Active Switch -->
                    <div class="col-md-2">
                        <div class="form-check form-switch form-control-lg mt-md-3">
                            <input asp-for="createCourses.IsActive" type="checkbox" class="form-check-input " id="isActiveToggle" />
                            <label class="form-check-label fs-6 " for="isActiveToggle">Is Active</label>
                        </div>
                    </div>
                     
                <div class="col-md-2 mt-md-5">
                    <button type="submit" class="btn btn-success  " id="addBtn">
                        @(Model.createCourses != null && Model.createCourses.Id.HasValue && Model.createCourses.Id.Value != 0 ? "Update" : "Add")
                    </button>
                </div>
            </div>


        </form>
    </div>
</div>
<div class="card">
        <div class="card-header">
            <span class="card-title fw-normal">Add Courses</span>
        </div>
    <div class="card-body">
            <div class="table-responsive">
                <table class="table  table-hover">
                    <thead class="table-success">
                    <tr>
                        <th class="rounded-start"> Sr.No </th>
                        <th>Name </th>
                        <th>Is Active </th>
                            <th class="rounded-end">Action</th>
                    </tr>
                </thead>
                <tbody>
        @if (ViewBag.Course != null)
        {
                    @foreach (var item in ViewBag.Course)
                    {
                        <tr>
                            <td>@(ViewBag.Course.IndexOf(item) + 1)</td>
                            <td>@item.Name</td>
                            <td>
                                        <div class="form-check form-switch form-control-lg m-0 p-0">

                                    <input type="checkbox" class="form-check-input togglebtn" id="isActiveToggle_@item.Id" @(item.IsActive ? "checked" : "") />
                                </div>
                            </td>

                            <td>
                                <a asp-action="CourseView" asp-route-id="@item.Id" class="btn btn-sm btn-info editBtn">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <a class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id','course' ,'@Url.Action("Delete", "Course")') ">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                        </tr>
                        }

                    } 
                    else
                    {
                         <tr>
                             <td colspan="10">No Courses Found</td>
                         </tr>
                    }
                </tbody>
            </table>
    </div>
    </div>
    </div>
</div>


@section scripts {
    <!-- dropzone min -->
    <script src="~/assets/libs/dropzone/dropzone-min.js"></script>

    <!--crypto-kyc init-->
    <script src="~/assets/js/pages/crypto-kyc.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

    <partial name="_ValidationScriptsPartial" />




}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@Html.Partial("_DeleteConfirmation")


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
   



    function confirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                let url;


                url = '@Url.Action("Delete", "Course")/' + id;
            }
            window.location.href = url;
        }
                            })
                        };




   
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.togglebtn').on('change', function () {
            var $checkbox = $(this);
            var itemId = $checkbox.attr('id').split('_')[1];
            var isActive = $checkbox.is(':checked');

            // Disable the checkbox
            $checkbox.prop('disabled', true);

            $.ajax({
                url: '@Url.Action("UpdateIsActive", "Course")',
                type: 'POST',
                data: {
                    id: itemId,
                    isActive: isActive
                },
                success: function (response) {
                    // Handle success
                    // Re-enable the checkbox
                    window.location.reload(true);
                    $checkbox.prop('disabled', false);
                },
                error: function (xhr, status, error) {
                    // Handle error
                    console.log(xhr.responseText);
                    window.location.reload(true);
                    // Re-enable the checkbox
                    $checkbox.prop('disabled', false);
                }
            });
        });
    });
</script>



