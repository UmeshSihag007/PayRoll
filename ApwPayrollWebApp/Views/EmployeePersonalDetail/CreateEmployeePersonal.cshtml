                            <span class="input-group-text">
                                <i class="mdi mdi-account-details"></i>
                            </span>
                            <input asp-for="EmployeePersonalDetail.CreateEmployeeBank.AccountBranch" type="text" class="form-control form-control-sm" placeholder="Enter account Branch Name" />
